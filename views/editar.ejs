    <h1>Editar Evento: <%= evento.nombre %></h1>
    <form id="editForm">
        <input type="hidden" name="eventoID" value="<%= evento.eventoID %>" />

        <label for="nombre">Nombre del Evento</label>
        <input type="text" id="nombre" name="nombre" value="<%= evento.nombre %>" required />

        <label for="fecha">Fecha</label>
        <input type="datetime-local" id="fecha" name="fecha" value="<%= evento.fecha %>" required />

        <label for="ubicacion">Ubicación</label>
        <input type="text" id="ubicacion" name="ubicacion" value="<%= evento.ubicacion %>" required />

        <label for="descripcion">Descripción</label>
        <textarea id="descripcion" name="descripcion" required><%= evento.descripcion %></textarea>

        <label for="tipoEventoID">Tipo de Evento</label>
        <select id="tipoEventoID" name="tipoEventoID" required>
            <option value="1" <%= evento.tipoEventoID == 1 ? 'selected' : '' %>>Conferencia</option>
            <option value="2" <%= evento.tipoEventoID == 2 ? 'selected' : '' %>>Taller</option>
            <option value="3" <%= evento.tipoEventoID == 3 ? 'selected' : '' %>>Seminario</option>
            <option value="4" <%= evento.tipoEventoID == 4 ? 'selected' : '' %>>Estudio</option>
            <option value="5" <%= evento.tipoEventoID == 5 ? 'selected' : '' %>>Devocional</option>
            <option value="6" <%= evento.tipoEventoID == 6 ? 'selected' : '' %>>Auditorio</option>
        </select>

        <!-- Campos adicionales del tipo de evento -->
        <label for="tipoEventoNombre">Nombre del Tipo de Evento</label>
        <input type="text" id="tipoEventoNombre" name="tipoEventoNombre" value="<%= evento.tipoEvento.nombre %>" required />

        <label for="tipoEventoDescripcion">Descripción del Tipo de Evento</label>
        <textarea id="tipoEventoDescripcion" name="tipoEventoDescripcion" required><%= evento.tipoEvento.descripcion %></textarea>

        <button type="submit">Actualizar Evento</button>
    </form>
                <!-- Gráfica de barras -->
                <div class="mt-8">
                    <canvas id="myChart" width="400" height="200"></canvas>
                </div>
            </div>
        
