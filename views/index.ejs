    <div class="container mt-4">
        <h1 class="text-center mb-4">LISTA DE EVENTOS</h1>
<!-- Tabla de eventos -->
<table name= tablaEventos class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Ubicación</th>
            <th>Tipo de Evento</th>
            <th>Descripción del Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% eventos.forEach(evento => { %>
            <tr>
                <td><%= evento.eventoID || 'No disponible' %></td>
                <td><%= evento.nombre || 'Sin nombre' %></td>
                <td><%= new Date(evento.fecha).toLocaleString() || 'Fecha no disponible' %></td>
                <td><%= evento.ubicacion || 'Ubicación no disponible' %></td>
                <td><%= evento.tipoEvento && evento.tipoEvento.nombre ? evento.tipoEvento.nombre : 'No especificado' %></td>
                <td><%= evento.tipoEvento && evento.tipoEvento.descripcion ? evento.tipoEvento.descripcion : 'Sin descripción' %></td>
                <td>
                    <a href="/editar/<%= evento.eventoID %>" class="btn btn-primary btn-sm">Editar</a>
                    <a href="/crear" class="btn btn-primary btn-sm">Crear</a>
                    <a href="#" onclick="eliminarEvento('<%= evento.eventoID %>')" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
            <!-- Gráfica de barras -->
            <div class="mt-8">
                <canvas id="myChart" width="400" height="200"></canvas>
            </div>
